<!-- general form elements -->
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Add new task</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-controller="Task" asp-action="Add">
        <div class="card-body">
            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text" class="form-control" id="Name" name="Description" placeholder="Description...">
            </div>
            <div class="form-group">
                <label for="DueDate">Due Date</label>
                <input type="date" class="form-control" id="ImageUrl" name="DueDate" placeholder="https://example.example/...">
            </div>
            <div class="form-group">
                <label for="Type">Type</label>
                <input type="text" class="form-control" name="TaskType" id="AmounAvailable" placeholder="Type...">
            </div>
            <div class="form-group">
                <label for="Status">Status</label>
                <input type="text" class="form-control" name="Status" id="Price" placeholder="Status...">
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>